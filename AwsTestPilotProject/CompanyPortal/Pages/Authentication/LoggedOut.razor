@page "/authentication/loggedout"

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h3>You have been logged out</h3>
                </div>
                <div class="card-body">
                    <p>Your session has ended. To access the portal again, please log in.</p>
                    <a class="btn btn-primary" href="/authentication/login">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
